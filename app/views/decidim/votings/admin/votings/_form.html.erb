<div class="card">
  <div class="card-divider">
    <h2 class="card-title"><%= title %></h2>
  </div>

  <div class="card-section votings">
    <div class="row column" >
      <%= form.translated :text_field, :title, autofocus: true %>
    </div>

    <div class="row column" >
      <%= form.translated :editor, :description %>
    </div>

    <div class="row column">
      <%= form.select :status , voting_statuses_options %>
    </div>

    <div class="row column">
      <%= form.upload :image, optional: false %>
    </div>

    <div class="row">
      <div class="columns xlarge-6">
        <%= form.date_field :start_date %>
        <p class="help-text"><%=t '.start_date_help' %></p>
      </div>

      <div class="columns xlarge-6">
        <%= form.date_field :end_date %>
        <p class="help-text"><%=t '.end_date_help' %></p>
      </div>
    </div>

    <div class="row">
      <div class="columns xlarge-6">
        <%= form.select :scope_type_id,
                        scope_type_options(form.object.scope_type_id),
                        {},
                        {
                            disabled: false,
                            class: 'dependable',
                            'data-selector': 'voting_decidim_scope_id',
                            'data-scope-id': form.object.decidim_scope_id,
                            'data-scope-search-url': votings_scopes_search_url
                        } %>


        <%#= form.select :type_id,
                        initiative_type_options,
                        {},
                        {
                            disabled: true,
                            'data-scope-selector': 'initiative_decidim_scope_id',
                            'data-scope-id': current_initiative.scope.id,
                            'data-scope-search-url': decidim_initiatives.initiative_type_scopes_search_url
                        } %>
      </div>

      <div class="columns xlarge-6">
        <%= form.select :decidim_scope_id, scope_options(form.object.decidim_scope_id), { include_blank: true }, { disabled: false} %>
      </div>

    </div>
    <div class="row" >
      <div class="columns xlarge-6">
        <%= form.date_field :census_date_limit %>
        <p class="help-text"><%=t '.census_date_limit_help' %></p>
      </div>

      <div class="columns xlarge-6">
        <%= form.number_field :importance %>
      </div>
    </div>
    <div class="row" >
      <div class="columns xlarge-6">
        <%= form.text_field :voting_system, value:'nVotes', disabled:true %>
      </div>

      <div class="columns xlarge-6">
        <%= form.url_field :voting_url %>
      </div>
    </div>


  </div>
</div>

<%= javascript_include_tag 'decidim/votings/admin/votings' %>