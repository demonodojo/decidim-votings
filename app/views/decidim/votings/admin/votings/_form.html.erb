<div class="card">
  <div class="card-divider">
    <h2 class="card-title"><%= title %></h2>
  </div>

  <div class="card-section votings">
    <div class="row column" >
      <%= form.translated :text_field, :title, autofocus: true %>
    </div>

    <div class="row column" >
      <%= form.translated :editor, :description %>
    </div>

    <div class="row column">
      <%= form.select :status , voting_statuses_options %>
    </div>

    <div class="row column">
      <%= form.upload :image, optional: false %>
    </div>

    <div class="row">
      <div class="columns xlarge-6">
        <%= form.datetime_field :start_date %>
        <p class="help-text"><%=t '.start_date_help' %></p>
      </div>

      <div class="columns xlarge-6">
        <%= form.datetime_field :end_date %>
        <p class="help-text"><%=t '.end_date_help' %></p>
      </div>
    </div>

    <div class="row column">
      <%= form.check_box :scopes_enabled %>
    </div>

    <div class="row column">
      <%= form.scopes_select :decidim_scope_id, prompt: t("decidim.scopes.global"), remote_path: decidim.scopes_search_path %>
    </div>

    <div class="row" >
      <div class="columns xlarge-6">
        <%= form.datetime_field :census_date_limit %>
        <p class="help-text"><%=t '.census_date_limit_help' %></p>
      </div>

      <div class="columns xlarge-6">
        <%= form.number_field :importance %>
      </div>
    </div>
    <div class="row" >
      <div class="columns xlarge-6">
        <%= form.text_field :voting_system, value:'nVotes', disabled:true %>
      </div>

      <div class="columns xlarge-6">
        <%= form.url_field :voting_url %>
      </div>
    </div>

    <div class="row" >
      <div class="columns xlarge-6">
        <%= form.text_field :voting_identifier %>
      </div>

      <div class="columns xlarge-6">
        <%= form.password_field :shared_key %>
      </div>
    </div>


  </div>
</div>

<%= javascript_include_tag 'decidim/votings/admin/votings' %>